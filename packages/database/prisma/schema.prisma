generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  name  String
  email String  @unique
  image String?
  provider String

  Balance Balance?
  Orders  Orders[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Trade {
  id        Int      @id @default(autoincrement())
  tradeTime DateTime @map("trade_time")
  symbol    String
  price     Decimal  @db.Decimal(18, 8)
  quantity  Decimal  @db.Decimal(18, 8)

  @@index([symbol, tradeTime])
  @@map("trades")
}

model Balance {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  total    Int @default(10000)
  tradable Int @default(10000)
  locked   Int @default(0)
}

model Orders {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      OrderType
  asset     String
  price     Decimal     @db.Decimal(18, 8)
  margin    Decimal     @db.Decimal(18, 8)
  quantity  Decimal     @db.Decimal(18, 8)
  leverage  Int
  decimals  Int
  status    OrderStatus
  createdAt DateTime    @default(now())
}

enum OrderType {
  SHORT
  LONG
}

enum OrderStatus {
  OPEN
  CLOSED
  LIQUIDATED
}
